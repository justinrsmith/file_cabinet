{% load static %}
{% load uploader_tags %}
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>File Cabinet Login</title>
        <link href="{% static 'css/bootstrap.min.css' %}" rel="stylesheet">
        <link href="{% static 'css/custom.css' %}" rel="stylesheet">
    </head>
    <body>
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">File Cabinet</a>
                </div>
            </div>
        </nav>
        <div class="container">
            <div class="row">
                {% if messages %}
                    {% for message in messages %}
                        <div class="main-alert alert alert-danger" role="alert">{{ message }}</div>
                    {% endfor %}
                {% endif %}
            </div>
            <div class="row">
                <div class="col-xs-6 col-xs-offset-3">
                    <div class="well">
                        <form action="" method="post">
                            <h2 class="text-center form-signin-heading">Password Reset</h2>
                            <div style="display:none">
                                <input type="hidden" value="{{ csrf_token }}" name="csrfmiddlewaretoken">
                            </div>
                            {% csrf_token %}
                            {% for field in form %}
                                {% if forloop.counter == 3 %}
                                    <h4>Additional Information</h4>
                                {% endif %}
                                <div class="form-group {% if field.errors %}has-error{% endif %}">
                                    <div class="row">
                                        <div class="col-xs-8 col-xs-offset-2">
                                            {% add_attr field class='form-control' placeholder=field.label %}
                                            {% if field.name == 'file' %}
                                                <p class="help-block"><strong>Accepted File Types:</strong> jpg/jpeg, png, zip, psd, xlsx, csv, py, txt</p>
                                            {% endif %}
                                            {% if field.errors %}
                                                <span class="help-block">{{ field.errors.as_text }}</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                            <div class="row">
                                <div class="col-xs-6 col-xs-offset-3">
                                    <button class="btn btn-md file_cab_btn btn-block" type="submit" value="Reset password">Reset Password</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
